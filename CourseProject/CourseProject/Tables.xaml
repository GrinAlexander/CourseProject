<Window x:Class="CourseProject.Tables"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject"
        mc:Ignorable="d"
        Title="Tables" Height="350" Width="600"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        >
    <Grid>
        <Label x:Name="labelTableName" Content="Текущая: " HorizontalAlignment="Left" Margin="150,30,0,0" VerticalAlignment="Top" FontSize="16" Padding="0"/>
        <DataGrid x:Name="dataGridMain" Margin="150,55,30,30" VerticalAlignment="Stretch" AutoGenerateColumns="True"/>
        
        <Label Content="Таблицы:" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top" FontSize="16" Padding="0"/>
        <ComboBox x:Name="comboBoxMain" Margin="30, 55, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="90" SelectionChanged="comboBoxMain_SelectionChanged">
        </ComboBox>
    </Grid>
</Window>
